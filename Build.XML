<project name="Test" basedir="." default="run">

    <property name="src.dir"     value="src"/>

    <property name="bin.dir"   value="bin"/>
    <property name="testC.dir"    value="testC"/>
    <property name="tests.dir"    value="tests"/>
    <property name="Doc.dir"      value="Doc"/>


    <target name="clean">
        <delete dir="${bin.dir}"/>
        <delete dir="${testC.dir}"/>
        <delete dir="${Doc.dir}"/>
    </target>

    <target name="build">
        <mkdir dir="${testC.dir}"/>
        <mkdir dir="${bin.dir}"/>
        <javac srcdir="${src.dir}" destdir="${bin.dir}"/>
        <javac srcdir="tests" destdir="${testC.dir}"/>
    </target>


    <target name="run" depends="build">
        <java classname="Test" classpath="${bin.dir}" fork="true"/>
    </target>

    <target name="test">
    	<java  classname="tests.Test1" classpath="${testC.dir}" fork="true"/>	
    </target>

    <target name="javadoc" >
        <mkdir dir="${Doc.dir}"/>
        <javadoc sourcepath="${src.dir}" destdir="${Doc.dir}" packagenames="main"/>
    </target>

</project>
